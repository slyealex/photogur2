<%= link_to "BACK", '/pictures' %>

<h1>
  <%= @picture.title %> | <%= @picture.artist %>
  <%= image_tag @picture.url %>
</h1>

<%= link_to "EDIT", edit_picture_path(@picture) %>
<%= link_to "DELETE", @picture, method: :delete, data: {confirm: "Are you sure you want to delete this data?"} %>

<h2>Comments</h2>
  <% @comments.each do |c| %>
  <p><%= c.name %></p>
  <p><%= c.message %></p>
  <p><%= c.created_at %></p>
<% end %>
